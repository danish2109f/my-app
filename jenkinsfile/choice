pipeline {
    agent any
    
    stages {
        stage('Clone') {
            steps {
                 git branch: "main", url: "https://github.com/danish2109f/my-app.git"
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('Deploy to Apache Tomcat') {
            steps {
                script {
                    def warFile = sh(returnStdout: true, script: 'find . -name "*.war"').trim()
                    if (warFile) {
                        sh "cp ${warFile} /path/to/apache-tomcat/webapps/"
                        echo "WAR file copied to Apache Tomcat webapps directory."
                    } else {
                        error "No WAR file found."
                    }
                }
            }
        }
    }
}
